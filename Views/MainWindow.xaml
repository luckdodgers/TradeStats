<Window x:Class="TradeStats.Views.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:TradeStats.Views"
        xmlns:prism="http://prismlibrary.com/"
        prism:ViewModelLocator.AutoWireViewModel="True" 
        mc:Ignorable="d"
        Title="MainWindow" Height="550" Width="750">
    <Grid>
        <DockPanel>
            <Grid DockPanel.Dock="Top" HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                <TabControl x:Name="MwTopTabControl" BorderBrush="Transparent">
                    <TabItem x:Name="TradesManagmentTab">
                        <TabItem.Header>
                            <TextBlock Text="Trades merge" FontSize="13" Margin="1,1,1,1"></TextBlock>
                        </TabItem.Header>
                        <TabItem.Content>
                            <DockPanel Margin="3" VerticalAlignment="Stretch" HorizontalAlignment="Stretch" LastChildFill="False">
                                <DockPanel.Dock>Left</DockPanel.Dock>
                                <DataGrid HorizontalAlignment="Stretch" VerticalAlignment="Stretch">
                                    <DataGrid.Columns>
                                        <DataGridCheckBoxColumn></DataGridCheckBoxColumn>
                                        <DataGridTextColumn Width="90" Header="Date"></DataGridTextColumn>
                                        <DataGridTextColumn Width="70" Header="Pair"></DataGridTextColumn>
                                        <DataGridTextColumn Width="60" Header="Side"></DataGridTextColumn>
                                        <DataGridTextColumn Width="100" Header="Price"></DataGridTextColumn>
                                        <DataGridTextColumn Width="100" Header="Sum"></DataGridTextColumn>
                                        <DataGridTextColumn Width="100" Header="Result"></DataGridTextColumn>
                                    </DataGrid.Columns>
                                </DataGrid>
                                <Grid Margin="6,0,0,0">
                                    <StackPanel Orientation="Vertical">
                                        <StackPanel Orientation="Horizontal">
                                            <TextBlock FontSize="14" FontStyle="Italic" Text="Last trade:"></TextBlock>
                                            <TextBlock x:Name="LastTradeDt" FontStyle="Italic" Margin="4,0,0,0" FontSize="14" Text="14-12-2021"></TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                            <TextBlock Margin="0,0,5,0" FontSize="13" Text="Currency:"></TextBlock>
                                            <ComboBox Width="100" VerticalAlignment="Top" TextBlock.TextAlignment="Center"></ComboBox>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                                            <TextBlock FontSize="14" Text="Profit per trade, %:"></TextBlock>
                                            <TextBlock x:Name="PptValue" Margin="4,0,0,0" FontSize="14"></TextBlock>
                                        </StackPanel>
                                        <StackPanel Orientation="Horizontal" Margin="0,3,0,0">
                                            <TextBlock Text="Absolute profit:" FontSize="14"></TextBlock>
                                            <TextBlock x:Name="AbsProfitValue" Margin="4,0,0,0" FontSize="14"></TextBlock>
                                        </StackPanel>
                                    </StackPanel>
                                    <StackPanel Orientation="Horizontal">
                                        <Button x:Name="UpdateUnmergedTradesBtn"  Height="30" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Center">
                                            <TextBlock Text="Merge" FontSize="13" FontWeight="DemiBold"></TextBlock>
                                        </Button>
                                        <Button x:Name="UncheckAllBtn" Margin="10,10,0,0" Height="30" Width="80" VerticalAlignment="Bottom" HorizontalAlignment="Left">
                                            <TextBlock Text="Uncheck all" FontSize="13"></TextBlock>
                                        </Button>
                                    </StackPanel>
                                </Grid>
                            </DockPanel>
                        </TabItem.Content>
                    </TabItem>
                    <TabItem>
                        <TabItem.Header>
                            <TextBlock Text="Other option" FontSize="13" Margin="1,1,1,1"></TextBlock>
                        </TabItem.Header>
                    </TabItem>
                </TabControl>
            </Grid>
        </DockPanel>
    </Grid>
</Window>
